<%- include('../partials/header.ejs'); -%>

    <nav class=" navbar navbar-expand-lg navbar-dark"
        style="position: fixed; width: 100%; background-color: #212121; top:0px; z-index: 1">
        <div class="container">
            <a href="/user/dashboard" class="navbar-brand text-primary font-weight-bold p-3">SKEDDULE</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto text-center">
                    <li style="color: #fff;" class="nav-item nav-link"><i class="fas fa-user mr-1"></i>
                        <%= user.username %>
                    </li>
                    <li class="nav-item"><a href="/user/logout?id=<%= user.id %>" class="nav-link">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 40px;">
        <header class="jumbotron" style="padding: 4rem 2rem 2rem 2rem;">
            <div class="container">
                <h2 class="text-center pb-4" style="text-decoration: underline;">Welcome to SKEDDULE</h2>
                <div style="display: flex; width: 100%; justify-content: space-between;">
                    <form style="width: 100%;" method="post" action="/user/task/add?id=<%= user.id %>">
                        <div class="row pb-2">
                            <div class="col-lg-6 d-flex">
                                <label class="col-sm-3 col-form-label">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" name="task" required class="form-control"
                                        placeholder="Enter task title">
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex">
                                <label class="col-sm-3 col-form-label">Description</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="task_description" required
                                        placeholder="Enter task description" rows="2"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 d-flex">
                                <label class="col-sm-3 col-form-label">Due Date</label>
                                <div class="col-sm-9">
                                    <input type="date" name="due_date" required class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex">
                                <label class="col-sm-3 col-form-label">Priority</label>
                                <div class="col-sm-9">
                                    <select class="form-control" required name="priority" id="">
                                        <option value="">Select Priority</option>
                                        <option value="1">High</option>
                                        <option value="2">Medium</option>
                                        <option value="3">Low</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <input class="btn btn-primary m-3" type="Submit" value="Add Task">
                            </div>
                        </div>
                    </form>
                </div>
                <% if(typeof msg !=='undefined' && msg==1) { %>
                    <div style="width: 50%; margin-top: 10px;" class=" alert alert-success alert-dismissible fade show"
                        role="alert">
                        <span>Task added successfully.</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% } %>
                        <% if(typeof msg !=='undefined' && msg==2) { %>
                            <div style="width: 50%; margin-top: 10px;"
                                class=" alert alert-success alert-dismissible fade show" role="alert">
                                <span>Task deleted successfully.</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <% } %>
            </div>
        </header>

        <div class="mb-5">
            <table id="example" class="table mb-5">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" style="width: 300px;">Task Name</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Priority</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach(function(task){ %>
                        <tr>
                            <th scope="row">1</th>
                            <td class="font-weight-bold">
                                <%= task.task_name %>
                            </td>
                            <td>
                                <%= task.due_date.toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                            </td>
                            
                            <td>
                                <select
                                class="form-control <%= task.status === 'Todo' ? 'btn-primary' : (task.status === 'In Progress' ? 'btn-warning' : 'btn-success') %>"
                                id="task_status" value="<%= task.status %>"
                                onchange="handleStatusChange(this, <%= task.id %>, <%= task.user_id %>)"
                                <%=task.status==='Completed' ? 'disabled' : '' %>>>
                                <option <%=task.status==='Todo' ? 'selected' : '' %> >Todo</option>
                                <option <%=task.status==='In Progress' ? 'selected' : '' %> >In Progress
                                </option>
                                <option <%=task.status==='Completed' ? 'selected' : '' %> >Completed</option>
                            </select>
                            </td>
                            <td class="pl-4"><%= task.priority %></td>
                            <td class="d-flex">
                                <a href="" title="Edit"><button type="button" class="btn btn-sm"
                                        style="background-color: #5a5c69; color:#fff;"><i class="fas fa-edit"></i></button></a>
                                <form class="ml-1" action="/user/task/delete?id=<%= task.id %>&user_id=<%= user.id %>" method="POST">
                                    <button type="submit" class="btn btn-sm" title="Delete" style="background-color: #e74a3b; color:#fff;"
                                        onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                            </tr>
                            <% }) %>
            </tbody>
            </table>
    </div>
    </div>

    <script>
        new DataTable('#example');

        function handleStatusChange(selectElement, taskId, userId) {
            // const selectElement = document.getElementById('task_status');
            const selectedStatus = selectElement.value;
            fetch(`/user/task/update/status?user_id=${userId}&id=${taskId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ status: selectedStatus }),
            })
                .then(response => response.json())
                .then(data => {
                    console.log('API response:', data);
                    window.location.href = `http://localhost:3000/user/dashboard?id=${userId}&msg=3`;
                })
                .catch(error => {
                    console.error('Error making API call:', error);
                });
        }
    </script>

    <%- include('../partials/footer.ejs'); -%>